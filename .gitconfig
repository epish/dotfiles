[user]
	name = epishan
	email = epishan@gmail.com
[diff]
[pager]
  diff =
[color]
  ui = auto
[alias]
  st = status -a
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  ch = checkout -
  co = checkout
  cb = checkout -b
[merge]
    tool = threesome
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
# vim: set et :
[pull]
    rebase = true
    ff = only
[branch "master"]
    mergeoptions = --no-ff
[branch "release"]
    mergeoptions = --no-ff
[push]
	default = current
[init]
	templatedir = ~/.git_template
