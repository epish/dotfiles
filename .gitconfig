[user]
	name = Serge Epishan
	email = sergey.epishkin@lazada.com
[diff]
[pager]
  diff =
[color]
  ui = auto
[alias]
  st = status -a
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  ch = checkout -
[merge]
    tool = threesome
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
# vim: set et :
[pull]
    rebase = true
    ff = only
[branch "master"]
    mergeoptions = --no-ff
[branch "release"]
    mergeoptions = --no-ff
[push]
	default = simple
