KeepAlive yes
ServerAliveInterval 60

#default config for amazon hosts
Host *compute.amazonaws.com
    User ubuntu
    IdentityFile "~/.ssh/aws-key.pem"

Host *github.com
    ForwardAgent yes
    IdentityFile "~/.ssh/id_rsa"

Host *.mc *.moeco.ninja
    User root
    ForwardAgent yes
    IdentityFile "~/.ssh/id_rsa_mc"

# DO NOT forward agent to jumphosts
Host jh.sgeq.lazada.com jh.sggs.lazada.com
  User sepishkin
  ForwardAgent no

# Access lazada servers via jumphosts
Host *.lzd.co *.lzd.io *.sgdc *.hkdc *.iddc *.aws
  ProxyJump jh.sggs.lazada.com
  User sepishkin
  IdentityFile "~/.ssh/id_rsa_lzd"

Host *
    ForwardAgent yes
    IdentityFile "~/.ssh/id_rsa_lzd"
    User    sepishkin
