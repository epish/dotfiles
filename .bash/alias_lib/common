# common aliases
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'

alias ls='ls --color=always'
alias ll='ls -lArtF'
alias la='ls -A'
alias l='ls -CF'

alias clear='echo -e "\e[2J"'
alias nl="nl -ba"

alias p='pushd'
alias o='popd'
alias d='dirs'
alias less='less -R'
alias du='du -hs'


alias follow=". ~/bin/follow"
# vim: set syn=sh :

#utils
alias ping='ping -c 5'
alias ports='netstat -tulanp'
alias lsof_ports='lsof -Pnl +M -i4'
